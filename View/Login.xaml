<Window x:Class="Hotel_C4ta.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hotel C4TA Login" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#4B0082" ResizeMode="CanMinimize">
    <Grid>
        <Border Background="White" CornerRadius="20" 
                Width="350" Height="400"
                VerticalAlignment="Center" HorizontalAlignment="Center" 
                Padding="10" >
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="380" >

                <!-- Logo -->
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <Image Source="/Resources/LogoHotel.jpg" 
                           Width="147" Height="115" 
                           Stretch="UniformToFill"/>
                    <TextBlock Text="Welcome to Hotel C4TA" 
                               FontSize="15"
                               FontFamily="Montserrat"
                               FontWeight="Medium" 
                               Margin="0,15,0,20" 
                               TextAlignment="Center" Height="21" Width="183"/>
                </StackPanel>
                
                <TextBox x:Name="txtUsername"
                         Height="35"
                         BorderBrush="#DDD"
                         BorderThickness="1"
                         Padding="8" Width="199"
                         >
                    <TextBox.Style>
                        <Style TargetType="{x:Type TextBox}">
                            <Setter Property="Foreground" Value="Gray"/>
                            <Setter Property="Text" Value="USERNAME"/>
                            <Style.Triggers>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="Text" Value=""/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Username -->

                <!-- Password -->
                <PasswordBox x:Name="txtPassword"
                             Margin="0,10"
                             Height="35"
                             BorderBrush="#DDD"
                             BorderThickness="1"
                             Padding="8"
                             />
                <Button Content="JOIN" 
                        Click="Join_Click"
                        Background="#9370DB" 
                        Foreground="White"
                        FontWeight="Bold"
                        Height="40"
                        BorderThickness="0"
                        >
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border CornerRadius="10" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Botón -->
            </StackPanel>
        </Border>
    </Grid>
</Window>
