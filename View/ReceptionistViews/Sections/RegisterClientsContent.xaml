<UserControl x:Class="Hotel_C4ta.View.ReceptionistViews.Sections.RegisterClientsContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">

	<Grid Background="White" Margin="10">
		<Border Background="#F5F5F5" CornerRadius="10" Padding="14">
			<StackPanel>
				<!-- Header -->
				<TextBlock Text="➕ Register Client"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#4B0082"
                           Margin="0,0,0,20"/>

				<!-- Formulario -->
				<UniformGrid Columns="2" Rows="2" Margin="0,0,0,10">
					<StackPanel Margin="5">
						<TextBlock Text="DNI"/>
						<TextBox x:Name="TxtDni"/>
					</StackPanel>
					<StackPanel Margin="5">
						<TextBlock Text="Full Name"/>
						<TextBox x:Name="TxtName"/>
					</StackPanel>
					<StackPanel Margin="5">
						<TextBlock Text="Email"/>
						<TextBox x:Name="TxtEmail"/>
					</StackPanel>
					<StackPanel Margin="5">
						<TextBlock Text="Phone"/>
						<TextBox x:Name="TxtPhone"/>
					</StackPanel>
				</UniformGrid>

				<!-- Botón -->
				<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
					<Button x:Name="BtnSave" Content="Save" Width="100"
                            Background="#4B0082" Foreground="White" Click="BtnSave_Click"/>
				</StackPanel>
			</StackPanel>
		</Border>
	</Grid>
</UserControl>
