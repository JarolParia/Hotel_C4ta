<UserControl x:Class="Hotel_C4ta.View.ReceptionistViews.Sections.Search_UpdateClientContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">

<Grid Background="White" Margin="10">
		<Border Background="#F5F5F5" CornerRadius="10" Padding="14">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

				<!-- Header -->
				<TextBlock Text="👥 Administración de Clientes"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#4B0082"
                           Margin="0,0,0,10"/>

				<!-- DataGrid -->
				<DataGrid x:Name="ClientsGrid"
                          Grid.Row="1"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          AlternatingRowBackground="#EDEDED"
                          RowHeight="34"
                          SelectionChanged="ClientsGrid_SelectionChanged">
					<DataGrid.Columns>
						<DataGridTextColumn Header="DNI" Binding="{Binding _DNI}" Width="*"/>
						<DataGridTextColumn Header="Nombre" Binding="{Binding _Name}" Width="*"/>
						<DataGridTextColumn Header="Email" Binding="{Binding _Email}" Width="*"/>
						<DataGridTextColumn Header="Teléfono" Binding="{Binding _Phone}" Width="*"/>
					</DataGrid.Columns>
				</DataGrid>

				<!-- Formulario debajo -->
				<Border Grid.Row="2" Background="White" CornerRadius="8" Padding="12"
                        BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,10,0,0">
					<StackPanel>
						<TextBlock Text="Detalles del Cliente" FontSize="16" FontWeight="Bold"
                                   Foreground="#4B0082" Margin="0,0,0,10"/>

						<UniformGrid Columns="2" Rows="2" Margin="0,0,0,10">
							<StackPanel Margin="5">
								<TextBlock Text="DNI"/>
								<TextBox x:Name="TxtDni"/>
							</StackPanel>
							<StackPanel Margin="5">
								<TextBlock Text="Nombre"/>
								<TextBox x:Name="TxtName"/>
							</StackPanel>
							<StackPanel Margin="5">
								<TextBlock Text="Email"/>
								<TextBox x:Name="TxtEmail"/>
							</StackPanel>
							<StackPanel Margin="5">
								<TextBlock Text="Teléfono"/>
								<TextBox x:Name="TxtPhone"/>
							</StackPanel>
						</UniformGrid>

						<!-- Botones -->
						<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
							<Button x:Name="BtnSave" Content="Actualizar" Width="90" Background="#4B0082" Foreground="White" Click="BtnSave_Click" Margin="0,0,8,0"/>
							<Button x:Name="BtnDelete" Content="Eliminar" Width="90" Background="#B00020" Foreground="White" Click="BtnDelete_Click"/>
						</StackPanel>
					</StackPanel>
				</Border>
			</Grid>
		</Border>
	</Grid>
</UserControl>
