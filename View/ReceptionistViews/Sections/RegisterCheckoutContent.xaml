<UserControl x:Class="Hotel_C4ta.View.ReceptionistViews.Sections.RegisterCheckOutContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">

    <Grid Background="White" Margin="10">
        <Border Background="#F5F5F5" CornerRadius="10" Padding="14">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0"
                           Text="📤 Guests Check-Out"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#4B0082"
                           Margin="0,0,0,10"/>

                <!-- Tabla de reservas checked in-->
                <DataGrid x:Name="BookingsGrid"
                          Grid.Row="1"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          CanUserAddRows="False"
                          AlternatingRowBackground="#EDEDED"
                          RowHeight="34"
                          HeadersVisibility="Column"
                          SelectionChanged="BookingsGrid_SelectionChanged">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#4B0082"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Height" Value="30"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding BookingID}" Width="*" CanUserResize="False"/>
                        <DataGridTextColumn Header="Client" Binding="{Binding ClientDNI}" Width="*" CanUserResize="False"/>
                        <DataGridTextColumn Header="Room" Binding="{Binding RoomID}" Width="*" CanUserResize="False"/>
                        <DataGridTextColumn Header="Start" Binding="{Binding StartDate, StringFormat=d}" Width="*" CanUserResize="False"/>
                        <DataGridTextColumn Header="End" Binding="{Binding EndDate, StringFormat=d}" Width="*" CanUserResize="False"/>
                        <DataGridTextColumn Header="Estimated Price" Binding="{Binding EstimatedPrice}" Width="*" CanUserResize="False"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Formulario de pago -->
                <Border Grid.Row="2"
                        Background="White"
                        CornerRadius="8"
                        Padding="12"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="Check-Out Details"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#4B0082"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Selected Booking:" FontWeight="Bold"/>
                        <TextBlock x:Name="LblBookingInfo" Text="(none)" Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                            <TextBlock Text="Total amount:" Width="120"/>
                            <TextBox x:Name="TxtAmount" Width="150" IsReadOnly="True"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5,0,15">
                            <TextBlock Text="Payment method:" Width="120"/>
                            <ComboBox x:Name="CmbMethod" Width="150">
                                <ComboBoxItem Content="Cash"/>
                                <ComboBoxItem Content="Card"/>
                                <ComboBoxItem Content="Transfer"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="BtnCancel" Content="Cancel" Width="90" Margin="0,0,8,0"
                                    Click="BtnCancel_Click"/>
                            <Button x:Name="BtnCheckOut" Content="Confirm Check-Out"
                                    Width="160" Background="#4B0082" Foreground="White"
                                    Click="BtnCheckOut_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>


