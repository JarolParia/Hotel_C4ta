<UserControl x:Class="Hotel_C4ta.View.ReceptionistViews.Sections.CreateBookingContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <Grid Background="White" >
        <Border Background="#F5F5F5" CornerRadius="10" Padding="14">
            <StackPanel>
                <!-- Header -->
                <TextBlock Text="📅 Crear Reserva"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#4B0082"
                           Margin="0,0,0,15"/>

                <!-- Campos -->
                <TextBlock Text="Cliente (DNI)" />
                <ComboBox x:Name="CmbClient"
                          DisplayMemberPath="_Name"
                          SelectedValuePath="_DNI"
                          Margin="0,0,0,10"/>

                <TextBlock Text="Recepcionista" />
                <ComboBox x:Name="CmbReceptionist"
                          DisplayMemberPath="_Name"
                          SelectedValuePath="Id"
                          Margin="0,0,0,10"/>

                <TextBlock Text="Habitación" />
                <ComboBox x:Name="CmbRoom"
                          DisplayMemberPath="_Number"
                          SelectedValuePath="_Number"
                          Margin="0,0,0,10"/>

                <TextBlock Text="Fecha Inicio"/>
                <DatePicker x:Name="DpStartDate" SelectedDateChanged="DateChanged" Margin="0,0,0,10"/>

                <TextBlock Text="Fecha Fin"/>
                <DatePicker x:Name="DpEndDate" SelectedDateChanged="DateChanged" Margin="0,0,0,10"/>

                <TextBlock Text="Estado"/>
                <TextBox x:Name="TxtStatus" Text="Pendiente" IsReadOnly="True" Margin="0,0,0,10"/>

                <TextBlock Text="Precio Estimado"/>
                <TextBox x:Name="TxtEstimatedPrice" IsReadOnly="True" Margin="0,0,0,20"/>

                <!-- Botones -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="BtnSave" Content="Guardar" Width="100"
                            Background="#4B0082" Foreground="White" Margin="0,0,10,0"
                            Click="BtnSave_Click"/>
                    <Button x:Name="BtnCancel" Content="Cancelar" Width="100"
                            Background="#B00020" Foreground="White"
                            Click="BtnCancel_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
