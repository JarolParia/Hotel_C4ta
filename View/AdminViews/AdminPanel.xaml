<Window x:Class="Hotel_C4ta.View.AdminViews.AdminPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Panel" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#EDEDED" ResizeMode="CanResizeWithGrip">

    <Grid>
        <!-- Tarjeta principal con sombra -->
        <Border Background="White" CornerRadius="20"
                Margin="20"
                Padding="20"
                SnapsToDevicePixels="True">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="4" Opacity="0.3"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="1"/>
                    <!-- Línea separadora -->
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Sidebar -->
                <StackPanel Grid.Column="0" Margin="10,0,10,0">

                    <!-- Logo -->
                    <Image Source="/Resources/LogoHotel.jpg"
                           Width="132" Height="136"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"/>

                    <!-- Dashboard -->
                    <Button Content="📊  Dashboard"
                            Background="Transparent"
                            Foreground="Black"
                            BorderThickness="0"
                            Cursor="Hand"
                            Padding="8"
                            Margin="0,10,0,10"
                            HorizontalAlignment="Stretch"
                            Click="Dashboard_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#E6D6F5"/>
                                                    <!-- morado claro -->
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- User Management (botón redondeado con hover) -->
                    <Button Content="👤  User Management"
                            Background="Transparent"
                            Foreground="Black"
                            BorderThickness="0"
                            Cursor="Hand"
                            Padding="8"
                            Margin="0,10,0,10"
                            HorizontalAlignment="Stretch"
                            Click="UserManagement_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    CornerRadius="10"
                                                    Background="{TemplateBinding Background}"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#E6D6F5"/>
                                                    <!-- morado claro -->
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Rooms Management (botón redondeado con hover) -->
                    <Button Content="🛏  Rooms Management"
                            Background="Transparent"
                            Foreground="Black"
                            BorderThickness="0"
                            Cursor="Hand"
                            Padding="8"
                            Margin="0,10,0,10"
                            HorizontalAlignment="Stretch"
                            Click="RoomManagement_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    CornerRadius="10"
                                                    Background="{TemplateBinding Background}"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#E6D6F5"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Logout redondo -->
                    <Button Content="Log Out"
                            Background="#4B0082"
                            Foreground="White"
                            FontWeight="Bold"
                            Margin="0,40,0,0"
                            BorderThickness="0"
                            Cursor="Hand"
                            HorizontalAlignment="Center"
                            Width="100" Height="35">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        CornerRadius="20"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#7B68EE"/>
                                        <!-- hover -->
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#4B0082"/>
                                        <!-- más oscuro -->
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

                <!-- Línea divisoria que ocupa todo el alto -->
                <Border Background="#DDDDDD" Width="1" RenderTransformOrigin="0.5,0.5" Grid.Column="1" Margin="0,-20,0,-20">
                    <Border.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleX="-0.007"/>
                            <RotateTransform/>
                            <TranslateTransform X="-0.031"/>
                        </TransformGroup>
                    </Border.RenderTransform>
                </Border>

                <!-- Contenido dinámico -->
                <Grid Grid.Column="2" Margin="20,0,0,0">
                    <ContentControl x:Name="ContentArea"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
