<UserControl x:Class="Hotel_C4ta.View.AdminViews.Sections.LoggerUsersSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hotel_C4ta.View.AdminViews.Sections"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="8" Padding="16" Background="White">
            <StackPanel>
                <TextBlock Text="Registrar Nuevo Usuario"
                       FontWeight="Bold" FontSize="16"
                       Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" Margin="0,6">
                    <TextBlock Text="Nombre:" Width="120" VerticalAlignment="Center"/>
                    <TextBox x:Name="TxtNombre" Width="220"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,6">
                    <TextBlock Text="Rol / Código:" Width="120" VerticalAlignment="Center"/>
                    <TextBox x:Name="TxtRolCodigo" Width="220"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,6">
                    <TextBlock Text="Contraseña:" Width="120" VerticalAlignment="Center"/>
                    <PasswordBox x:Name="Pwd" Width="220"/>
                </StackPanel>

                <Button Content="Guardar"
        Width="120" Height="32"
        HorizontalAlignment="Right" Margin="0,12,0,0"
        Background="#6A0DAD" Foreground="White"
        Click="BtnGuardar_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
