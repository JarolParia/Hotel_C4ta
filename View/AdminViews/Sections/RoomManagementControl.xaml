<UserControl x:Class="Hotel_C4ta.View.AdminViews.Sections.RoomManagementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <Grid Background="White" Margin="10">
        <Border Background="#F5F5F5" CornerRadius="10" Padding="14">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0"
                           Text="🛏 Gestión de Habitaciones"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#4B0082"
                           Margin="0,0,0,10"/>

                <!-- DataGrid -->
                <DataGrid x:Name="RoomsGrid"
                          Grid.Row="1"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          CanUserAddRows="False"
                          AlternatingRowBackground="#EDEDED"
                          RowHeight="34"
                          HeadersVisibility="Column"
                          SelectionChanged="RoomsGrid_SelectionChanged"
                          ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                          FocusVisualStyle="{x:Null}"
                          BorderThickness="0"
                          >
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#4B0082"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Height" Value="30"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Number" Binding="{Binding _Number}" Width="*" CanUserResize="False"/>
                        <DataGridTextColumn Header="Floor" Binding="{Binding _Floor}" Width="*" CanUserResize="False"/>
                        <DataGridTextColumn Header="State" Binding="{Binding _Status}" Width="*" CanUserResize="False"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding _Type}" Width="*" CanUserResize="False"/>
                        <DataGridTextColumn Header="Capacity" Binding="{Binding _Capacity}" Width="*" CanUserResize="False"/>
                        <DataGridTextColumn Header="BasedPrice" Binding="{Binding _BasePrice}" Width="*" CanUserResize="False"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Formulario debajo -->
                <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="12"
                        BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="Detalles de Habitación" FontSize="16" FontWeight="Bold"
                                   Foreground="#4B0082" Margin="0,0,0,10"/>

                        <UniformGrid Columns="2" Rows="3" Margin="0,0,0,10">
                            <StackPanel Margin="5">
                                <TextBlock Text="Número"/>
                                <TextBox x:Name="TxtNumber"/>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <TextBlock Text="Piso"/>
                                <TextBox x:Name="TxtFloor"/>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <TextBlock Text="Estado"/>
                                <TextBox x:Name="TxtStatus"/>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <TextBlock Text="Tipo"/>
                                <TextBox x:Name="TxtType"/>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <TextBlock Text="Capacidad"/>
                                <TextBox x:Name="TxtCapacity"/>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <TextBlock Text="Precio Base"/>
                                <TextBox x:Name="TxtBasePrice"/>
                            </StackPanel>
                        </UniformGrid>

                        <!-- Botones -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="BtnNew" Content="Nuevo" Click="BtnNew_Click" Width="90" Margin="0,0,8,0"/>
                            <Button x:Name="BtnSave" Content="Guardar" Width="90" Click="BtnSave_Click" Background="#4B0082" Foreground="White" Margin="0,0,8,0"/>
                            <Button x:Name="BtnDelete" Content="Eliminar" Width="90" Background="#B00020" Click="BtnDelete_Click" Foreground="White"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
