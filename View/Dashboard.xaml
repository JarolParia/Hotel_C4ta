<UserControl x:Class="Hotel_C4ta.View.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hotel_C4ta.View"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Título -->
            <RowDefinition Height="*"/>
            <!-- Métricas -->
            <RowDefinition Height="*"/>
            <!-- Pagos recientes -->
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Dashboard"
               FontSize="28"
               FontWeight="Bold"
               Foreground="#333"
               Margin="0,0,0,20"
               Grid.Row="0"/>

        <!-- Tarjetas métricas -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <WrapPanel HorizontalAlignment="Center" 
                   Margin="0,0,0,20" 
                   ItemWidth="200" 
                   ItemHeight="120">

                <!-- Clientes -->
                <Border Background="#6C63FF" CornerRadius="20" Padding="20" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Clients" Foreground="White" FontSize="16" FontWeight="Bold"/>
                        <TextBlock x:Name="ClientsText" Foreground="White" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Habitaciones -->
                <Border Background="#FF6584" CornerRadius="20" Padding="20" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Rooms" Foreground="White" FontSize="16" FontWeight="Bold"/>
                        <TextBlock x:Name="RoomsText" Foreground="White" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Reservas Activas -->
                <Border Background="#3DCBBE" CornerRadius="20" Padding="20" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Active Bookings" Foreground="White" FontSize="16" FontWeight="Bold"/>
                        <TextBlock x:Name="Active_BookingsText" Foreground="White" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Reservas Pendientes -->
                <Border Background="#FFB347" CornerRadius="20" Padding="20" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Pending Bookings" Foreground="White" FontSize="16" FontWeight="Bold"/>
                        <TextBlock x:Name="Pending_BookingsText" Foreground="White" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Habitaciones Disponibles vs Ocupadas -->
                <Border Background="#4CAF50" CornerRadius="20" Padding="20" Margin="10" >
                    <StackPanel>
                        <TextBlock Text="Occupied Rooms" Foreground="White" FontSize="16" FontWeight="Bold" />
                        <TextBlock x:Name="OccupiedRoomsText" Foreground="White" FontSize="26" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="AvailibleRoomsText" Foreground="White" FontSize="14" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Ingresos Totales -->
                <Border Background="#9C27B0" CornerRadius="20" Padding="20" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Total income" Foreground="White" FontSize="16" FontWeight="Bold"/>
                        <TextBlock x:Name="Total_incomeText" Foreground="White" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </WrapPanel>
        </ScrollViewer>

        <!-- Listado Pagos Recientes -->
        <StackPanel Grid.Row="2">
            <TextBlock Text="Last pays" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <DataGrid x:Name="LastPaysGrid"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Fecha" Binding="{Binding PaymentDate}" Width="*"/>
                    <DataGridTextColumn Header="Monto" Binding="{Binding Amount}" Width="*"/>
                    <DataGridTextColumn Header="Método" Binding="{Binding PaymentMethod}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
