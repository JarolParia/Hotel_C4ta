<Window x:Class="Hotel_C4ta.Presentation.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hotel C4TA Login" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#4B0082" ResizeMode="NoResize">

    <Grid>
        <Border Background="White" CornerRadius="20" 
               Width="350" Height="450"
               VerticalAlignment="Center" HorizontalAlignment="Center">

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="420" >

                <!-- Logo -->
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <Image Source="/Presentation/Resources/LogoHotel.jpg" 
                          Width="147" Height="115" 
                          Stretch="UniformToFill"/>
                    <TextBlock Text="Welcome to Hotel C4TA" 
                              FontSize="15"
                              FontFamily="Montserrat"
                              FontWeight="Medium" 
                              Margin="0,15,0,30" 
                              TextAlignment="Center" Height="21" Width="183"/>
                </StackPanel>

                <!-- User -->
                <Label Content="User:" 
                      FontWeight="Bold" 
                      Foreground="Gray" 
                      Margin="0,0,0,5"/>
                <Border BorderBrush="#9370DB" BorderThickness="2" CornerRadius="10" Width="215" Height="40">
                    <TextBox x:Name="txtEmail"
                            BorderThickness="0" 
                            Padding="8"
                            Width="205" Height="30"
                            VerticalContentAlignment="Center"/>
                </Border>

                <!-- Password -->
                <Label Content="Password:" 
                      FontWeight="Bold" 
                      Foreground="Gray" 
                      Margin="0,20,0,5"/>
                <Border BorderBrush="#9370DB" BorderThickness="2" CornerRadius="10" Width="215" Height="40">
                    <PasswordBox x:Name="txtPassword"
                                BorderThickness="0"
                                Padding="8"
                                Width="205" Height="30"
                                VerticalContentAlignment="Center"/>
                </Border>

                <!-- Botón -->
                <Button Content="JOIN" 
                       Click="Join_Click"
                       Background="#9370DB" 
                       Foreground="White"
                       FontWeight="Bold"
                       Height="40"
                       BorderThickness="0" Width="109"
                       Cursor="Hand"
                       Margin="0,30,0,0">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border x:Name="border"
                                   CornerRadius="10"
                                   Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <!-- Hover -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#7B68EE"/>
                                </Trigger>
                                <!-- Click (Pressed) -->
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#4B0082"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
