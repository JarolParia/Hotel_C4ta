<UserControl x:Class="Hotel_C4ta.Presentation.Views.ReceptionistViews.Sections.Search_UpdateClientsContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hotel_C4ta.Presentation.Views.ReceptionistViews.Sections"
             Height="Auto" Width="Auto">

    <Grid Background="White" Margin="10">
        <Border Background="#F5F5F5" CornerRadius="10" Padding="14">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Text="👥 Clients Management"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#4B0082"
                           Margin="0,0,0,10"/>

                <!-- DataGrid -->
                <DataGrid x:Name="ClientsGrid"
                          Grid.Row="1"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          AlternatingRowBackground="#EDEDED"
                          RowHeight="34"
                          SelectionChanged="ClientsGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="DNI" Binding="{Binding DNI}" Width="*"/>
                        <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="*"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                        <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Formulario debajo -->
                <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="12"
                        BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="Client Details" FontSize="16" FontWeight="Bold"
                                   Foreground="#4B0082" Margin="0,0,0,10"/>

                        <UniformGrid Columns="2" Rows="2" Margin="0,0,0,10">
                            <StackPanel Margin="5">
                                <TextBlock Text="DNI"/>
                                <TextBox x:Name="TxtDni" IsEnabled="False"/>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <TextBlock Text="Full Name"/>
                                <TextBox x:Name="TxtName"/>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <TextBlock Text="Email"/>
                                <TextBox x:Name="TxtEmail"/>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <TextBlock Text="Phone"/>
                                <TextBox x:Name="TxtPhone"/>
                            </StackPanel>
                        </UniformGrid>

                        <!-- Botones -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="BtnUpdate" Content="Update" Width="90" Background="#4B0082" Foreground="White" Click="BtnUpdate_Click" Margin="0,0,8,0"/>
                            <Button x:Name="BtnDelete" Content="Delete" Width="90" Background="#B00020" Foreground="White" Click="BtnDelete_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
