<UserControl x:Class="Hotel_C4ta.Presentation.Views.AdminViews.Sections.UserManagementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hotel_C4ta.Presentation.Views.AdminViews.Sections"
             Height="Auto" Width="Auto">
    <Grid Background="White" Margin="10">
        <Border Background="#F5F5F5" CornerRadius="10" Padding="14">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0"
                           Text="👨‍💼 Users Management"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#4B0082"
                           Margin="0,0,0,10"/>

                <!-- DataGrid -->
                <DataGrid x:Name="UsersGrid"
                          Grid.Row="1"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          CanUserAddRows="False"
                          AlternatingRowBackground="#EDEDED"
                          RowHeight="34"
                          HeadersVisibility="Column"
                          SelectionChanged="UsersGrid_SelectionChanged_1"
                          ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                          FocusVisualStyle="{x:Null}"
                          BorderThickness="0">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#4B0082"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Height" Value="30"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="*" CanUserResize="False"/>
                        <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="*" CanUserResize="False"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*" CanUserResize="False"/>
                        <DataGridTextColumn Header="Password" Binding="{Binding PasswordHashed}" Width="*" CanUserResize="False"/>
                        <DataGridTextColumn Header="Role" Binding="{Binding Rol}" Width="*" CanUserResize="False"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Formulario debajo -->
                <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="12"
                        BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="Users Details" FontSize="16" FontWeight="Bold"
                                   Foreground="#4B0082" Margin="0,0,0,10"/>

                        <UniformGrid Columns="2" Rows="3" Margin="0,0,0,10">
                            <StackPanel Margin="5">
                                <TextBlock Text="ID"/>
                                <TextBox x:Name="TxtID" IsEnabled="True"/>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <TextBlock Text="Full Name"/>
                                <TextBox x:Name="TxtFullName"/>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <TextBlock Text="Email"/>
                                <TextBox x:Name="TxtEmail"/>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <TextBlock Text="Password"/>
                                <PasswordBox x:Name="TxtPassword"/>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <TextBlock Text="Role"/>
                                <ComboBox x:Name="CmbRole" SelectedIndex="0">
                                    <ComboBoxItem Content="Admin"/>
                                    <ComboBoxItem Content="Recep"/>
                                </ComboBox>
                            </StackPanel>
                        </UniformGrid>

                        <!-- Botones -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="BtnNew" Content="Create"  Background="PaleGreen" Width="90" Margin="0,0,8,0" Click="BtnNew_Click"/>
                            <Button x:Name="BtnSave" Content="Save" Width="90" Background="#4B0082" Foreground="White" Margin="0,0,8,0" Click="BtnUpdate_Click"/>
                            <Button x:Name="BtnDelete" Content="Delete" Width="90" Background="#B00020"  Foreground="White" Margin="0,0,8,0" Click="BtnDelete_Click"/>
                            <Button x:Name="BtnClear" Content="Clear" Width="90" Click="BtnClear_Click" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>