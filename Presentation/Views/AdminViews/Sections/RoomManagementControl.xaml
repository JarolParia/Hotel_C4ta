<UserControl x:Class="Hotel_C4ta.Presentation.Views.AdminViews.Sections.RoomManagementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hotel_C4ta.Presentation.Views.AdminViews.Sections"
             mc:Ignorable="d" 
             Height="Auto" 
             Width="Auto">
    <Grid Background="White" Margin="10">
        <Border Background="#F5F5F5" CornerRadius="10" Padding="14">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0"
                       Text="🛏 Rooms Management"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#4B0082"
                       Margin="0,0,0,10"/>

                <!-- DataGrid -->
                <DataGrid x:Name="RoomsGrid"
                      Grid.Row="1"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      CanUserAddRows="False"
                      AlternatingRowBackground="#EDEDED"
                      RowHeight="34"
                      HeadersVisibility="Column"
                      SelectionChanged="RoomsGrid_SelectionChanged"
                      ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                      FocusVisualStyle="{x:Null}"
                      BorderThickness="0"
                      >
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#4B0082"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Height" Value="30"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Number" Binding="{Binding RoomID}" Width="*" CanUserResize="False"/>
                        <DataGridTextColumn Header="Floor" Binding="{Binding RoomFloor}" Width="*" CanUserResize="False"/>
                        <DataGridTextColumn Header="State" Binding="{Binding RoomStatus}" Width="*" CanUserResize="False"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding RoomType}" Width="*" CanUserResize="False"/>
                        <DataGridTextColumn Header="Capacity" Binding="{Binding Capacity}" Width="*" CanUserResize="False"/>
                        <DataGridTextColumn Header="BasedPrice" Binding="{Binding BasePrice}" Width="*" CanUserResize="False"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Formulario debajo -->
                <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="12"
                    BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="Room Details" FontSize="16" FontWeight="Bold"
                               Foreground="#4B0082" Margin="0,0,0,10"/>

                        <UniformGrid Columns="2" Rows="3" Margin="0,0,0,10">
                            <StackPanel Margin="5">
                                <TextBlock Text="Room Number"/>
                                <TextBox x:Name="TxtRoomNumber" IsEnabled="True"/>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <TextBlock Text="Floor"/>
                                <TextBox x:Name="TxtRoomFloor" IsEnabled="True"/>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <TextBlock Text="Status"/>
                                <ComboBox x:Name="CmbStatus" SelectedIndex="0">
                                    <ComboBoxItem Content="Available"/>
                                    <ComboBoxItem Content="Occupied"/>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <TextBlock Text="Type"/>
                                <!-- ComboBox para Tipo -->
                                <ComboBox x:Name="CmbType" SelectedIndex="0" IsEnabled="True">
                                    <ComboBoxItem Content="Simple"/>
                                    <ComboBoxItem Content="Double"/>
                                    <ComboBoxItem Content="Suite"/>
                                    <ComboBoxItem Content="Matrimonial"/>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <TextBlock Text="Capacity"/>
                                <TextBox x:Name="TxtCapacity"/>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <TextBlock Text="Based Price"/>
                                <TextBox x:Name="TxtBasePrice"/>
                            </StackPanel>
                        </UniformGrid>

                        <!-- Botones -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="BtnNew" Content="Create" Click="BtnNew_Click" Background="PaleGreen" Width="90" Margin="0,0,8,0"/>
                            <Button x:Name="BtnSave" Content="Save" Width="90"  Background="#4B0082" Foreground="White" Margin="0,0,8,0" Click="BtnUpdate_Click"/>
                            <Button x:Name="BtnDelete" Content="Delete" Width="90" Background="#B00020" Click="BtnDelete_Click" Foreground="White" Margin="0,0,8,0"/>
                            <Button x:Name="BtnClear" Content="Clear" Width="90"  Click="BtnClear_Click" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>